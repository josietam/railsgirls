<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <h4><%= link_to idea.name, idea %></h4><hr>
        <%= image_tag idea.picture_url, width: '50%' if idea.picture.present?%><br>
        <%= idea.description %><br><br>
        <%= link_to idea do %>
          <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        <%= link_to edit_idea_path(idea) do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to idea, method: :delete, data: {confirm: 'Are you sure?'} do%>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </div>

    <% end %>
  </div>
<% end %>

